#include <iostream>

using namespace std;

int NumCounter(int num);
int EvenOdd(int num);

int EvenOdd(int num) {
    int j;
    j--;

    if (j == -1) {
        cout << j << " odd" << endl;
        j += 2;
        } else if (j == 0) {
            cout << j << "even" << endl;
        }

        if (num == 0) {
        return j;
    }

    return EvenOdd(num-1);

}


#include <iostream>

using namespace std;

int is_palintrope(string *str) {

    if (str[0] == 0) {
        return true;
    } else if (str[1] == 0) {
        return true;
    } else if (str[0] != str[str.size() - 1]) {
        return false;
    }

    return is_palintrope(str[str.size()-1])

}

